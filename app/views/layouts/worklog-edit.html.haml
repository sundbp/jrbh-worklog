!!! XML
!!!
%html{ :'xml:lang' => "en", :lang => "en" }
  %head
    %title JRBH - Worklog v4.0
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    = stylesheet_link_tag 'compiled/worklog-edit.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery.qtip.css', :media => 'screen, projecttion'
    
    = javascript_include_tag 'jquery.min.js'
    = javascript_include_tag 'jquery.qtip.js'
    = javascript_include_tag 'jquery-ui.min.js'
    = javascript_include_tag 'jquery.weekcalendar.js'
    //= javascript_include_tag 'jrails.js'
    = javascript_include_tag 'rails.js'
    = javascript_include_tag 'worklog.js'
    = csrf_meta_tag

  %body#worklog
    .container
      #header
        #logo
          %h1 JRBH
        #text-header
          %center
            %h2 Edit worklog
        #links
          #dashboard-info
            =link_to 'Back to Dashboard', :controller => :dashboard
          #user-info
            - unless current_user.blank?
              %ul
                %li= "Logged in user: #{link_to current_user.alias, :controller => :users, :action => :show, :id => current_user.id}".html_safe
                %li= "|"
                %li= link_to 'Logout', :controller => :logout
        %hr

      #main
        #content
          = yield

      #footer
        #copyright
          &copy; JRBH 2009.  Number Three, 59 Jermyn Street, London, SW1Y 6LX
        #produced-with
          - produced_string = "Produced using #{link_to('RubyOnRails', 'http://rubyonrails.org')}, #{link_to('Compass', 'http://compass-style.org/')}, and #{link_to('jQuery', 'http://jquery.com')}"
          = produced_string.html_safe
