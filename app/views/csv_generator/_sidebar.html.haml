#sidebar-header
  =link_to 'Dashboard', :controller => :dashboard
#user-info
  - unless current_user.blank?
    %ul
      %li= "Logged in user: #{link_to current_user.alias, :controller => :users, :action => :show, :id => current_user.id}"
      %li= "|"
      %li= link_to 'Logout', :controller => :logout
#sidebar-content
  %h3 Worklog v3.0
  %ul
    %li= link_to 'Edit my worklog', :controller => :worklog, :action => :edit
  %p.heading CSV dump
  %ul
    %li= link_to 'Dump data by company', :controller => :csv_generator, :action => :by_company_form
    %li= link_to 'Dump data by task', :controller => :csv_generator, :action => :by_task_form
    
