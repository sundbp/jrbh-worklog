#login-pad-left
  %hr
#login-box
  %h1 Login
  - form_for @user_session, :url => user_session_path do |f|
    = f.error_messages
    %p
      = f.label 'Username'
      %br
      = f.text_field :login
    %p
      = f.label :password
      %br
      = f.password_field :password
    %p
      = f.check_box :remember_me
      = f.label :remember_me
    %p
      = f.submit 'Login'
#login-pad-right
  %hr  